<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="350dp"
        android:background="#EDC6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/field_o_history"
            android:layout_width="389dp"
            android:layout_height="86dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:hint="отображение истории"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/edit_number_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035" />

        <EditText
            android:id="@+id/edit_number_field"
            android:onClick="operation"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:ems="10"
            android:gravity="right|center"
            android:hint="Введите число"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.562" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#030707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_layout">

        <TableRow
            android:id="@+id/Row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4sp">

            <Button
                android:id="@+id/button1"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp">

            </Button>
        </TableRow>

        <TableRow
            android:id="@+id/Row_2"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4sp">

            <Button
                android:id="@+id/button4"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_3"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4sp">

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="7"
                android:onClick="clickNumber"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button9"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_4"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4sp">

            <Button
                android:id="@+id/button0"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_plus"
                android:onClick="operation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_minus"
                android:onClick="operation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_5"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4sp">

            <Button
                android:id="@+id/button_multiply"
                android:onClick="operation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_division"
                android:onClick="operation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_float"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Row_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button_clear"
                android:onClick="Clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:text="C"
                android:textSize="20sp" />
            <Button
                android:id="@+id/button_sign_change"
                android:onClick="clickNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:text="+/-"
                android:textSize="20sp" />
            <Button
                android:id="@+id/button_percent"
                android:onClick="clickPercent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:text="%"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_find"
                android:onClick="find_result"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:text="="
                android:textSize="40dp" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


